@model Bloomie.Models.ViewModels.CustomArrangementViewModel
@{
    ViewData["Title"] = "Xem trước bó hoa";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4>@Model.Name</h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.PreviewImageUrl))
                    {
                        <img src="@Model.PreviewImageUrl" alt="@Model.Name" class="img-fluid mb-3">
                    }

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="lead">@Model.Description</p>
                    }

                    <h5 class="mt-4">Kiểu trình bày</h5>
                    <p>@Model.PresentationStyle?.Name - <strong>@Model.BasePrice.ToString("N0") VNĐ</strong></p>

                    <h5 class="mt-4">Các loại hoa trong bó</h5>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Loại hoa</th>
                                <th>Màu sắc</th>
                                <th>Số lượng</th>
                                <th>Đơn giá</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var flower in Model.Flowers)
                            {
                                <tr>
                                    <td>@flower.FlowerType?.Name</td>
                                    <td><span class="badge bg-secondary">@flower.Color</span></td>
                                    <td>@flower.Quantity</td>
                                    <td>@flower.UnitPrice.ToString("N0") VNĐ</td>
                                    <td>@flower.TotalPrice.ToString("N0") VNĐ</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @if (!string.IsNullOrEmpty(Model.Flowers.FirstOrDefault()?.Notes))
                    {
                        <h6>Ghi chú:</h6>
                        <p>@Model.Flowers.FirstOrDefault()?.Notes</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5>Chi tiết đơn hàng</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Giá cơ bản:</span>
                        <span>@Model.BasePrice.ToString("N0") VNĐ</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Giá hoa:</span>
                        <span>@Model.FlowersCost.ToString("N0") VNĐ</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <strong>Tổng cộng:</strong>
                        <strong class="text-success">@Model.TotalPrice.ToString("N0") VNĐ</strong>
                    </div>

                    <div class="d-grid gap-2">
                        @if (!Model.IsOrdered)
                        {
                            <form asp-action="AddToCart" method="post">
                                <input type="hidden" name="arrangementId" value="@Model.Id" />
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="fas fa-shopping-cart"></i> Thêm vào giỏ hàng
                                </button>
                            </form>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                Bó hoa này đã được đặt hàng
                            </div>
                        }

                        <a asp-action="Designer" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                            <i class="fas fa-edit"></i> Chỉnh sửa
                        </a>
                        <a asp-action="Designer" class="btn btn-outline-secondary">
                            <i class="fas fa-plus"></i> Thiết kế bó khác
                        </a>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <h6>Thông tin</h6>
                    <p class="small text-muted mb-1">Ngày tạo: @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</p>
                    @if (Model.UpdatedDate.HasValue)
                    {
                        <p class="small text-muted">Cập nhật: @Model.UpdatedDate.Value.ToString("dd/MM/yyyy HH:mm")</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
