@model Bloomie.Models.ViewModels.SavedArrangementsViewModel
@{
    ViewData["Title"] = "Thiết kế đã lưu";
}

<div class="container mt-4">
    <h2 class="mb-4">Bó hoa đã lưu của bạn</h2>

    @if (Model.SavedArrangements.Any())
    {
        <div class="row">
            @foreach (var arrangement in Model.SavedArrangements)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(arrangement.PreviewImageUrl))
                        {
                            <img src="@arrangement.PreviewImageUrl" class="card-img-top" alt="@arrangement.Name">
                        }
                        else
                        {
                            <div class="card-img-top bg-light p-5 text-center">
                                <i class="fas fa-seedling fa-3x text-muted"></i>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@arrangement.Name</h5>
                            <p class="card-text text-muted">@arrangement.Description</p>

                            <div class="mb-2">
                                <small class="text-muted">Kiểu: @arrangement.PresentationStyle?.Name</small>
                            </div>
                            <div class="mb-2">
                                <small class="text-muted">Số loại hoa: @arrangement.Flowers.Count</small>
                            </div>
                            <div class="mb-3">
                                <strong class="text-success">@arrangement.TotalPrice.ToString("N0") VNĐ</strong>
                            </div>

                            <div class="d-grid gap-2">
                                <a asp-action="Preview" asp-route-id="@arrangement.Id" class="btn btn-primary btn-sm">
                                    <i class="fas fa-eye"></i> Xem chi tiết
                                </a>
                                <a asp-action="Designer" asp-route-id="@arrangement.Id" class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-edit"></i> Chỉnh sửa
                                </a>
                                <button class="btn btn-outline-danger btn-sm delete-arrangement" data-id="@arrangement.Id">
                                    <i class="fas fa-trash"></i> Xóa
                                </button>
                            </div>
                        </div>
                        <div class="card-footer text-muted">
                            <small>Lưu: @((arrangement.UpdatedDate ?? arrangement.CreatedDate).ToString("dd/MM/yyyy"))</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-inbox fa-5x text-muted mb-3"></i>
            <h4>Bạn chưa có thiết kế nào được lưu</h4>
            <p class="text-muted">Hãy bắt đầu thiết kế bó hoa theo ý bạn!</p>
            <a asp-action="Designer" class="btn btn-primary">
                <i class="fas fa-plus"></i> Thiết kế ngay
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.delete-arrangement').click(function () {
                var arrangementId = $(this).data('id');
                if (confirm('Bạn có chắc muốn xóa thiết kế này?')) {
                    $.post('@Url.Action("DeleteArrangement")', { id: arrangementId })
                        .done(function (response) {
                            if (response.success) {
                                location.reload();
                            } else {
                                alert(response.message || 'Không thể xóa thiết kế');
                            }
                        })
                        .fail(function () {
                            alert('Có lỗi xảy ra');
                        });
                }
            });
        });
    </script>
}
